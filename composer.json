{
    "name": "Melindrea/security-application",
    "version": "0.0.0",
    "description": "This is a project to showcase implementation of security measures in web applications",
    "type": "project",
    "authors": [
        {
            "name": "Marie Hogebrandt",
            "email": "iam@mariehogebrandt.se",
            "homepage": "http://mariehogebrandt.se",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require-dev": {
        "sensiolabs/security-checker": "dev-master",
        "way/generators": "dev-master",
        "mockery/mockery": "dev-master",
        "zizaco/factory-muff": "dev-master",
        "phpdocumentor/phpdocumentor": "*",
        "phpunit/phpunit": "3.7.*",
        "squizlabs/php_codesniffer": "1.*",
        "pdepend/pdepend" : "1.1.*",
        "phploc/phploc": "*",
        "sebastian/phpcpd": "*",
        "sebastian/phpdcd": "*",
        "phpmd/phpmd" : "1.4.*"
    },
    "config": {
        "vendor-dir": "composer_components",
        "bin-dir": "composer_components/bin",
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "require": {
        "laravel/framework": "4.0.*",
        "michelf/php-markdown": "1.3.*@dev",
        "phptypography/phptypography": "dev-master",
        "mews/purifier": "dev-master",
        "roumen/sitemap": "dev-master",
        "roumen/feed": "dev-master",
        "mobiledetect/mobiledetectlib": "dev-master",
        "jyggen/curl": "3.1.*@dev"
    },
    "autoload": {
        "classmap": [
            "app/controllers",
            "app/commands",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "test/phpunit/TestCase.php"
        ],
        "psr-0": {
            "Hogebrandt": "app/libraries"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    }
}
